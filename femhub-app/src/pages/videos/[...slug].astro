---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const videos = await getCollection('videos');
  return videos.map((video) => ({
    params: { slug: video.slug },
    props: video,
  }));
}

const video = Astro.props;
const { Content } = await video.render();

// 获取相关视频
const allVideos = await getCollection('videos');
const relatedVideos = allVideos
  .filter(v => 
    v.slug !== video.slug && 
    v.data.topics.some(topic => video.data.topics.includes(topic))
  )
  .slice(0, 3);

// 格式化日期
const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// 格式化时长
const formatDuration = (minutes: number) => {
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  return hours > 0 ? `${hours}小时${mins}分钟` : `${mins}分钟`;
};
---

<Layout 
  title={`${video.data.title} - FemHub`}
  description={video.data.description}
>
  <article class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
        <a href="/" class="hover:text-purple-600 dark:hover:text-purple-400">首页</a>
        <span>/</span>
        <a href="/videos" class="hover:text-purple-600 dark:hover:text-purple-400">视频</a>
        <span>/</span>
        <span class="text-gray-900 dark:text-white">{video.data.title}</span>
      </div>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <div class="text-center mb-8">
        <span class="inline-flex items-center px-3 py-1 bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 text-sm font-medium rounded-full mb-6">
          <span class="mr-1">🎥</span>
          视频
        </span>
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
          {video.data.title}
        </h1>
      </div>

      <!-- Video Meta -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between bg-gray-50 dark:bg-gray-800 rounded-xl p-6 mb-8">
        <div class="flex flex-col md:flex-row md:items-center space-y-3 md:space-y-0 md:space-x-8">
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="font-medium">{video.data.author}</span>
          </div>
          
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time datetime={video.data.publishDate.toISOString()}>
              {formatDate(video.data.publishDate)}
            </time>
          </div>
          
          {video.data.duration && (
            <div class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{formatDuration(video.data.duration)}</span>
            </div>
          )}
        </div>

        <div class="flex items-center mt-4 lg:mt-0 space-x-4">
          {video.data.qualityScore && (
            <div class="flex items-center bg-yellow-50 dark:bg-yellow-900/30 px-3 py-1 rounded-full">
              <span class="text-yellow-500 mr-1">⭐</span>
              <span class="text-yellow-800 dark:text-yellow-200 font-medium text-sm">
                {video.data.qualityScore.toFixed(1)}
              </span>
            </div>
          )}
        </div>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-3">
        <!-- Video Player -->
        <div class="mb-8">
          <div class="aspect-video bg-gray-900 rounded-2xl overflow-hidden">
            {video.data.embedUrl ? (
              <iframe 
                src={video.data.embedUrl}
                title={video.data.title}
                class="w-full h-full"
                allowfullscreen
              ></iframe>
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="text-center text-white">
                  <div class="text-6xl mb-4">🎬</div>
                  <p class="text-lg mb-4">视频暂时无法播放</p>
                  <a 
                    href={video.data.sourceUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    观看原视频
                  </a>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Description -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/30 dark:to-purple-900/30 rounded-xl p-6 mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">视频简介</h2>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
            {video.data.description}
          </p>
        </div>

        <!-- Topics -->
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">相关主题</h2>
          <div class="flex flex-wrap gap-2">
            {video.data.topics.map(topic => (
              <a 
                href={`/topics/${encodeURIComponent(topic)}`}
                class="inline-block px-3 py-1 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:border-purple-500 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors"
              >
                {topic}
              </a>
            ))}
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between py-4 border-y border-gray-200 dark:border-gray-700 mb-8">
          <div class="flex items-center space-x-4">
            <button class="flex items-center text-gray-600 dark:text-gray-400 hover:text-red-500 transition-colors">
              <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span class="text-sm">收藏</span>
            </button>
            
            <button class="flex items-center text-gray-600 dark:text-gray-400 hover:text-blue-500 transition-colors">
              <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
              <span class="text-sm">分享</span>
            </button>
            
            <button class="flex items-center text-gray-600 dark:text-gray-400 hover:text-green-500 transition-colors">
              <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
              <span class="text-sm">下载</span>
            </button>
          </div>
          
          <a 
            href={video.data.sourceUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            原视频链接
          </a>
        </div>

        <!-- Detailed Content -->
        <div class="prose prose-lg max-w-none 
                     prose-headings:text-gray-900 dark:prose-headings:text-white
                     prose-p:text-gray-700 dark:prose-p:text-gray-300
                     prose-a:text-purple-600 hover:prose-a:text-purple-800
                     prose-strong:text-gray-900 dark:prose-strong:text-white
                     prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300
                     prose-blockquote:border-purple-500
                     prose-code:text-purple-600 dark:prose-code:text-purple-400
                     prose-pre:bg-gray-800 dark:prose-pre:bg-gray-900
                     prose-th:text-gray-900 dark:prose-th:text-white
                     prose-td:text-gray-700 dark:prose-td:text-gray-300">
          <Content />
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Video Info Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 mb-6 sticky top-8">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-4">视频信息</h3>
          
          <div class="space-y-4 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">作者:</span>
              <span class="text-gray-900 dark:text-white font-medium">{video.data.author}</span>
            </div>
            
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">发布:</span>
              <span class="text-gray-900 dark:text-white">{formatDate(video.data.publishDate)}</span>
            </div>
            
            {video.data.duration && (
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400">时长:</span>
                <span class="text-gray-900 dark:text-white">{formatDuration(video.data.duration)}</span>
              </div>
            )}
            
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">语言:</span>
              <span class="text-gray-900 dark:text-white">
                {video.data.language === 'zh-CN' ? '中文' : 
                 video.data.language === 'en' ? '英语' : video.data.language}
              </span>
            </div>

            {video.data.qualityScore && (
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400">评分:</span>
                <div class="flex items-center">
                  <span class="text-yellow-500 mr-1">⭐</span>
                  <span class="text-gray-900 dark:text-white font-medium">
                    {video.data.qualityScore.toFixed(1)}/10
                  </span>
                </div>
              </div>
            )}
          </div>

          <div class="border-t border-gray-200 dark:border-gray-600 pt-4 mt-6">
            <button class="w-full px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-200">
              添加到播放列表
            </button>
          </div>
        </div>

        <!-- Related Videos -->
        {relatedVideos.length > 0 && (
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">相关视频</h3>
            <div class="space-y-4">
              {relatedVideos.map(relatedVideo => (
                <a 
                  href={`/videos/${relatedVideo.slug}`}
                  class="group flex gap-3 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg p-2 transition-colors"
                >
                  <div class="flex-shrink-0 w-20 h-14 bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-900 to-purple-900 rounded-lg flex items-center justify-center">
                    {relatedVideo.data.thumbnail ? (
                      <img 
                        src={relatedVideo.data.thumbnail} 
                        alt={relatedVideo.data.title}
                        class="w-full h-full object-cover rounded-lg"
                      />
                    ) : (
                      <span class="text-lg">🎥</span>
                    )}
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="font-medium text-gray-900 dark:text-white text-sm leading-tight mb-1 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
                      {relatedVideo.data.title}
                    </h4>
                    <p class="text-xs text-gray-600 dark:text-gray-400 mb-1">
                      {relatedVideo.data.author}
                    </p>
                    {relatedVideo.data.duration && (
                      <p class="text-xs text-gray-500 dark:text-gray-500">
                        {formatDuration(relatedVideo.data.duration)}
                      </p>
                    )}
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Comments Section -->
    <section class="border-t border-gray-200 dark:border-gray-700 pt-12 mt-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">评论与讨论</h2>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8 text-center">
        <div class="text-4xl mb-4">💬</div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
          分享您的观点
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          与其他观众一起讨论这个视频
        </p>
        <button class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors">
          发表评论
        </button>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-4">
          评论功能即将上线，敬请期待
        </p>
      </div>
    </section>
  </article>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>