---
export interface Props {
  title: string;
  author: string;
  description: string;
  coverImage?: string;
  publishDate: Date;
  slug: string;
  topics: string[];
  isbn?: string;
}

const { title, author, description, coverImage, publishDate, slug, topics, isbn } = Astro.props;

const formatYear = (date: Date) => {
  return date.getFullYear();
};
---

<article class="group relative bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden min-h-[320px]">
  <a href={`/books/${slug}`} class="block h-full">
    <div class="flex flex-col sm:flex-row h-full">
      <!-- Book Cover Section -->
      <div class="w-full sm:w-32 md:w-36 lg:w-40 flex-shrink-0 p-4 sm:pr-0">
        <div class="flex flex-col h-full">
          <!-- Book Cover -->
          <div class="aspect-[2/3] bg-gradient-to-br from-purple-100 to-pink-100 dark:from-purple-900 dark:to-pink-900 relative overflow-hidden rounded-lg mb-3">
            {coverImage ? (
              <img 
                src={coverImage} 
                alt={title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="text-center p-4">
                  <span class="text-4xl mb-2 block">üìö</span>
                  <p class="text-xs text-gray-600 dark:text-gray-400 font-medium">Â∞ÅÈù¢Âä†ËΩΩ‰∏≠</p>
                </div>
              </div>
            )}
          </div>
          
          <!-- Cover Bottom Info - Â∞ÅÈù¢‰∏ãÊñπ‰ø°ÊÅØ -->
          <div class="flex-1 flex flex-col justify-end min-h-0">
            <!-- Topics in Cover Area -->
            <div class="flex flex-wrap gap-1 justify-center">
              {topics.slice(0, 4).map(topic => (
                <span class="inline-block px-2 py-1 text-xs bg-purple-50 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 rounded text-center">
                  {topic}
                </span>
              ))}
              {topics.length > 4 && (
                <span class="inline-block px-2 py-1 text-xs text-gray-500 dark:text-gray-500">
                  +{topics.length - 4}
                </span>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Book Info -->
      <div class="flex-1 p-4 sm:p-5 flex flex-col">
        <!-- Title -->
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors leading-tight line-clamp-3">
          {title}
        </h3>
        
        <!-- Author -->
        <div class="mb-4">
          <p class="text-sm text-gray-600 dark:text-gray-400 flex items-center">
            <svg class="w-4 h-4 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="font-medium">{author}</span>
          </p>
        </div>


        <!-- Description -->
        <div class="flex-1 mb-4">
          <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed line-clamp-5">
            {description}
          </p>
        </div>


        <!-- Action Row -->
        <div class="flex items-center justify-between pt-3 border-t border-gray-100 dark:border-gray-700 mt-auto">
          <div class="flex items-center space-x-4">
            <button class="text-gray-400 hover:text-red-500 transition-colors" title="Êî∂Ëóè">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
