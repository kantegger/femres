---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: article,
  }));
}

const article = Astro.props;
const { Content } = await article.render();

// 获取相关文章
const allArticles = await getCollection('articles');
const relatedArticles = allArticles
  .filter(a => 
    a.slug !== article.slug && 
    a.data.topics.some(topic => article.data.topics.includes(topic))
  )
  .slice(0, 3);

// 格式化日期
const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// 获取作者名字首字母
const getAuthorInitial = (author: string) => {
  return author.charAt(0).toUpperCase();
};

// 为作者头像生成颜色
const getAuthorColor = (author: string) => {
  const colors = [
    'bg-purple-500',
    'bg-blue-500', 
    'bg-green-500',
    'bg-yellow-500',
    'bg-pink-500',
    'bg-indigo-500',
    'bg-red-500',
    'bg-teal-500'
  ];
  let hash = 0;
  for (let i = 0; i < author.length; i++) {
    hash = author.charCodeAt(i) + ((hash << 5) - hash);
  }
  return colors[Math.abs(hash) % colors.length];
};
---

<Layout 
  title={`${article.data.title} - FemRes`}
  description={article.data.description}
>
  <article class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
        <a href="/" class="hover:text-purple-600 dark:hover:text-purple-400">首页</a>
        <span>/</span>
        <a href="/articles" class="hover:text-purple-600 dark:hover:text-purple-400">文章</a>
        <span>/</span>
        <span class="text-gray-900 dark:text-white">{article.data.title}</span>
      </div>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
        {article.data.title}
      </h1>

      <!-- Article Meta -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between bg-gray-50 dark:bg-gray-800 rounded-xl p-6 mb-8">
        <div class="flex flex-col md:flex-row md:items-center space-y-3 md:space-y-0 md:space-x-8">
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <div class={`w-6 h-6 rounded-full ${getAuthorColor(article.data.author)} flex items-center justify-center text-white text-xs font-semibold mr-3`}>
              {getAuthorInitial(article.data.author)}
            </div>
            <span class="font-medium">{article.data.author}</span>
          </div>
          
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time datetime={article.data.publishDate.toISOString()}>
              {formatDate(article.data.publishDate)}
            </time>
          </div>
          
          {article.data.readingTime && (
            <div class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{article.data.readingTime} 分钟阅读</span>
            </div>
          )}
        </div>

        <div class="flex items-center mt-4 md:mt-0">
        </div>
      </div>

      <!-- Featured Image -->
      {article.data.featuredImage && (
        <div class="aspect-[21/9] rounded-2xl overflow-hidden mb-8">
          <img 
            src={article.data.featuredImage} 
            alt={article.data.title}
            class="w-full h-full object-cover"
          />
        </div>
      )}

      <!-- Description -->
      <div class="bg-gradient-to-r from-purple-50 to-pink-50 dark:from-purple-900/30 dark:to-pink-900/30 rounded-xl p-6 mb-8">
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          {article.data.description}
        </p>
      </div>

      <!-- Topics -->
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">相关主题</h2>
        <div class="flex flex-wrap gap-2">
          {article.data.topics.map(topic => (
            <a 
              href={`/topics/${encodeURIComponent(topic)}`}
              class="inline-block px-3 py-1 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:border-purple-500 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors"
            >
              {topic}
            </a>
          ))}
        </div>
      </div>

      <!-- Action Bar -->
      <div class="flex items-center justify-between py-4 border-y border-gray-200 dark:border-gray-700 mb-8">
        <div class="flex items-center space-x-4">
          <button class="flex items-center text-gray-600 dark:text-gray-400 hover:text-red-500 transition-colors">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <span class="text-sm">收藏</span>
          </button>
          
          <button class="flex items-center text-gray-600 dark:text-gray-400 hover:text-blue-500 transition-colors">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
            <span class="text-sm">分享</span>
          </button>
        </div>
        
        <a 
          href={article.data.sourceUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          原文链接
        </a>
      </div>
    </header>

    <!-- Content -->
    <div class="prose prose-lg max-w-none 
                 prose-headings:text-gray-900 dark:prose-headings:text-white
                 prose-p:text-gray-700 dark:prose-p:text-gray-300
                 prose-a:text-purple-600 hover:prose-a:text-purple-800
                 prose-strong:text-gray-900 dark:prose-strong:text-white
                 prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300
                 prose-blockquote:border-purple-500
                 prose-code:text-purple-600 dark:prose-code:text-purple-400
                 prose-pre:bg-gray-800 dark:prose-pre:bg-gray-900
                 prose-th:text-gray-900 dark:prose-th:text-white
                 prose-td:text-gray-700 dark:prose-td:text-gray-300
                 mb-16">
      <Content />
    </div>

    <!-- Related Articles -->
    {relatedArticles.length > 0 && (
      <section class="border-t border-gray-200 dark:border-gray-700 pt-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">相关文章</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedArticles.map(relatedArticle => (
            <a 
              href={`/articles/${relatedArticle.slug}`}
              class="group block bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-200"
            >
              {relatedArticle.data.featuredImage && (
                <div class="aspect-[16/9] overflow-hidden">
                  <img 
                    src={relatedArticle.data.featuredImage} 
                    alt={relatedArticle.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <span>{relatedArticle.data.author}</span>
                  <span class="mx-2">•</span>
                  <time>{formatDate(relatedArticle.data.publishDate)}</time>
                  {relatedArticle.data.readingTime && (
                    <>
                      <span class="mx-2">•</span>
                      <span>{relatedArticle.data.readingTime}min</span>
                    </>
                  )}
                </div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
                  {relatedArticle.data.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3">
                  {relatedArticle.data.description}
                </p>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Comments Section -->
    <section class="border-t border-gray-200 dark:border-gray-700 pt-12 mt-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">讨论与评论</h2>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8 text-center">
        <div class="text-4xl mb-4">💬</div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
          加入讨论
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          分享您对这篇文章的看法和感受
        </p>
        <button class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors">
          参与讨论
        </button>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-4">
          评论功能即将上线，敬请期待
        </p>
      </div>
    </section>

    <!-- Newsletter Subscription -->
    <section class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl p-8 text-white text-center mt-16">
      <h2 class="text-2xl font-bold mb-4">订阅更新</h2>
      <p class="mb-6 opacity-90">
        获取最新的女性主义内容和深度分析，不错过任何重要观点
      </p>
      <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input 
          type="email" 
          placeholder="输入您的邮箱"
          class="flex-1 px-4 py-3 rounded-lg text-gray-900 placeholder-gray-400 focus:placeholder-gray-500"
        />
        <button class="px-6 py-3 bg-white/20 hover:bg-white/30 backdrop-blur text-white font-medium rounded-lg transition-colors">
          订阅
        </button>
      </div>
    </section>
  </article>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>