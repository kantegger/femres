---
import Layout from '../../layouts/Layout.astro';
import { createT, getLocalizedPath } from '../../i18n/index';

const currentLocale = 'en';
const t = createT(currentLocale);
---

<Layout title={`${t('contact.title')} - FemRes`} description={t('contact.subtitle')}>
  <!-- Hero Section -->
  <section class="relative py-12 sm:py-16 lg:py-20 overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-20 w-32 sm:w-48 lg:w-72 h-32 sm:h-48 lg:h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
      <div class="absolute top-10 right-10 w-32 sm:w-48 lg:w-72 h-32 sm:h-48 lg:h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-20 left-1/3 w-32 sm:w-48 lg:w-72 h-32 sm:h-48 lg:h-72 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-4 sm:mb-6">
          Contact
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Us</span>
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto px-4">
          {t('contact.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <!-- Contact Options Grid -->
    <section class="mb-16 sm:mb-20">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
        <!-- General Inquiries -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center text-white text-lg sm:text-2xl mb-4 sm:mb-6">
            üí¨
          </div>
          <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-900 dark:text-white mb-3 sm:mb-4">{t('contact.options.generalInquiry.title')}</h3>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-4 sm:mb-6">
            {t('contact.options.generalInquiry.description')}
          </p>
          <a
            href="mailto:info@femres.org"
            class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium transition-colors text-sm sm:text-base break-all"
          >
            <span class="truncate">info@femres.org</span>
            <svg class="ml-2 w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Content Submission -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl flex items-center justify-center text-white text-lg sm:text-2xl mb-4 sm:mb-6">
            üìù
          </div>
          <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-900 dark:text-white mb-3 sm:mb-4">{t('contact.options.contentSubmission.title')}</h3>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-4 sm:mb-6">
            {t('contact.options.contentSubmission.description')}
          </p>
          <a
            href="mailto:submissions@femres.org"
            class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium transition-colors text-sm sm:text-base break-all"
          >
            <span class="truncate">submissions@femres.org</span>
            <svg class="ml-2 w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Partnership -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center text-white text-lg sm:text-2xl mb-4 sm:mb-6">
            ü§ù
          </div>
          <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-900 dark:text-white mb-3 sm:mb-4">{t('contact.options.partnership.title')}</h3>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-4 sm:mb-6">
            {t('contact.options.partnership.description')}
          </p>
          <a
            href="mailto:partnership@femres.org"
            class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium transition-colors text-sm sm:text-base break-all"
          >
            <span class="truncate">partnership@femres.org</span>
            <svg class="ml-2 w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Volunteer -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 sm:p-8 border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-violet-500 to-violet-600 rounded-2xl flex items-center justify-center text-white text-lg sm:text-2xl mb-4 sm:mb-6">
            ‚ù§Ô∏è
          </div>
          <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-900 dark:text-white mb-3 sm:mb-4">{t('contact.options.volunteer.title')}</h3>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-4 sm:mb-6">
            {t('contact.options.volunteer.description')}
          </p>
          <a
            href="mailto:volunteer@femres.org"
            class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium transition-colors"
          >
            volunteer@femres.org
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="mb-20">
      <div class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-gray-800 dark:to-gray-900 rounded-3xl p-12">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              {t('contact.form.title')}
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
              {t('contact.form.subtitle')}
            </p>
          </div>

          <form action="https://formspree.io/f/095b5cdff33f424185e21befd3273767" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  {t('contact.form.name')} {t('contact.form.required')}
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors"
                  placeholder={t('contact.form.namePlaceholder')}
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  {t('contact.form.email')} {t('contact.form.required')}
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors"
                  placeholder={t('contact.form.emailPlaceholder')}
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.subject')} {t('contact.form.required')}
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors"
              >
                <option value="">{t('contact.form.subjectPlaceholder')}</option>
                <option value="general">{t('contact.form.subjects.general')}</option>
                <option value="content">{t('contact.form.subjects.content')}</option>
                <option value="partnership">{t('contact.form.subjects.partnership')}</option>
                <option value="volunteer">{t('contact.form.subjects.volunteer')}</option>
                <option value="feedback">{t('contact.form.subjects.feedback')}</option>
                <option value="other">{t('contact.form.subjects.other')}</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.message')} {t('contact.form.required')}
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors resize-none"
                placeholder={t('contact.form.messagePlaceholder')}
              ></textarea>
            </div>

            <div class="flex items-start">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500"
              />
              <label for="privacy" class="ml-3 text-sm text-gray-600 dark:text-gray-400">
                {t('contact.form.privacy')}
              </label>
            </div>

            <div class="text-center">
              <button
                type="submit"
                class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200"
              >
                {t('contact.form.send')}
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {t('contact.faq.title')}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          {t('contact.faq.subtitle')}
        </p>
      </div>
      <div class="max-w-3xl mx-auto space-y-6">
        <details class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
            {t('contact.faq.howToSubmit.question')}
          </summary>
          <p class="mt-4 text-gray-600 dark:text-gray-400">
            {t('contact.faq.howToSubmit.answer')}
          </p>
        </details>
        <details class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
            {t('contact.faq.howToFilter.question')}
          </summary>
          <p class="mt-4 text-gray-600 dark:text-gray-400">
            {t('contact.faq.howToFilter.answer')}
          </p>
        </details>
        <details class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
            {t('contact.faq.howToVolunteer.question')}
          </summary>
          <p class="mt-4 text-gray-600 dark:text-gray-400">
            {t('contact.faq.howToVolunteer.answer')}
          </p>
        </details>
        <details class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
            {t('contact.faq.donations.question')}
          </summary>
          <p class="mt-4 text-gray-600 dark:text-gray-400">
            {t('contact.faq.donations.answer')}
          </p>
        </details>
        <details class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
          <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
            {t('contact.faq.reportIssues.question')}
          </summary>
          <p class="mt-4 text-gray-600 dark:text-gray-400">
            {t('contact.faq.reportIssues.answer')}
          </p>
        </details>
      </div>
    </section>

    <!-- Office Info -->
    <section class="text-center">
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-12 border border-gray-200 dark:border-gray-700 max-w-2xl mx-auto">
        <div class="text-4xl mb-6">üè¢</div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          {t('contact.info.title')}
        </h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-400">
          <p class="flex items-center justify-center">
            <span class="text-xl mr-2">üìß</span>
            {t('contact.info.email')}
          </p>
          <p class="flex items-center justify-center">
            <span class="text-xl mr-2">üïê</span>
            {t('contact.info.responseTime')}
          </p>
          <p class="flex items-center justify-center">
            <span class="text-xl mr-2">üåç</span>
            {t('contact.info.serviceScope')}
          </p>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            {t('contact.info.note')}
          </p>
        </div>
      </div>
    </section>
  </div>

  <style>
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
      animation: blob 7s infinite;
    }
    .animation-delay-2000 {
      animation-delay: 2s;
    }
    .animation-delay-4000 {
      animation-delay: 4s;
    }

    details summary::-webkit-details-marker {
      display: none;
    }

    details summary {
      list-style: none;
    }

    details summary::before {
      content: '‚ñ∂';
      display: inline-block;
      margin-right: 0.5rem;
      transition: transform 0.3s;
    }

    details[open] summary::before {
      transform: rotate(90deg);
    }
  </style>
</Layout>