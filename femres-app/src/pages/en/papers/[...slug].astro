---
export const prerender = true;

import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import InteractionButtons from '../../../components/InteractionButtons';
import Discussion from '../../../components/Discussion';
import PaperCard from '../../../components/PaperCard.astro';
import { createT, getLocalizedPath } from '../../../i18n/index';
import { getTopicTranslation } from '../../../i18n/topicsUtils';

const currentLocale = 'en';
const t = createT(currentLocale);

export async function getStaticPaths() {
  const papers = await getCollection('papers');
  // 英文界面：为所有带-en后缀的论文生成页面
  const englishInterfacePapers = papers.filter(paper => paper.slug.endsWith('-en'));
  return englishInterfacePapers.map((paper) => ({
    params: { slug: paper.slug.slice(0, -3) }, // 去掉-en后缀生成URL (使用slice确保只移除末尾的-en)
    props: paper,
  }));
}

const paper = Astro.props;
const { Content } = await paper.render();

// Get related papers - only show English papers
const allPapers = await getCollection('papers');
const relatedPapers = allPapers
  .filter(p =>
    p.slug !== paper.slug &&
    p.slug.endsWith('-en') && // Only show English papers (with -en suffix)
    p.data.topics.some(topic => paper.data.topics.includes(topic))
  )
  .slice(0, 3);

// Format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Format citation count
const formatCitations = (count?: number) => {
  if (!count) return '0';
  if (count >= 1000) {
    return (count / 1000).toFixed(1) + 'K';
  }
  return count.toString();
};

// Get paper type text in English
const getPaperTypeText = (type?: string) => {
  switch (type) {
    case 'research': return 'Research Paper';
    case 'review': return 'Review Article';
    case 'case-study': return 'Case Study';
    case 'theoretical': return 'Theoretical Study';
    default: return 'Academic Paper';
  }
};

// Get paper type icon
const getPaperTypeIcon = (type?: string) => {
  switch (type) {
    case 'research': return '🔬';
    case 'review': return '📝';
    case 'case-study': return '📋';
    case 'theoretical': return '💭';
    default: return '📄';
  }
};

// Generate localized URLs
const homeLink = getLocalizedPath('/', currentLocale);
const papersLink = getLocalizedPath('papers', currentLocale);
---

<Layout
  title={`${paper.data.title} - FemRes`}
  description={paper.data.description}
>
  <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Breadcrumb -->
    <nav class="mb-8">
      <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
        <a href={homeLink} class="hover:text-amber-600 dark:hover:text-amber-400">Home</a>
        <span>/</span>
        <a href={papersLink} class="hover:text-amber-600 dark:hover:text-amber-400">{t('nav.papers')}</a>
        <span>/</span>
        <span class="text-gray-900 dark:text-white truncate max-w-xs">{paper.data.title}</span>
      </div>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-3 leading-tight">
        {paper.data.title}
      </h1>

      {paper.data.originalTitle && (
        <h2 class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-6 font-medium italic">
          {paper.data.originalTitle}
        </h2>
      )}

      <!-- Meta Info -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-6">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="font-medium">{paper.data.author}</span>
        </div>

        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <time datetime={paper.data.publishDate.toISOString()}>
            {formatDate(paper.data.publishDate)}
          </time>
        </div>

        {paper.data.journal && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            <span>{paper.data.journal}</span>
          </div>
        )}

        {paper.data.citationCount && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <span>{formatCitations(paper.data.citationCount)} citations</span>
          </div>
        )}
      </div>

      <!-- Description -->
      <div class="bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/30 dark:to-orange-900/30 rounded-xl p-6 mb-8">
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
          {paper.data.description}
        </p>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Paper Details -->
        <div class="mb-8">
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 space-y-6">
            <!-- Abstract -->
            {paper.data.abstract && (
              <div>
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                  <span class="text-amber-600 dark:text-amber-400 mr-3">📋</span>
                  Abstract
                </h2>
                <div class="text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-line">
                  {paper.data.abstract}
                </div>
              </div>
            )}

            <!-- Keywords -->
            {paper.data.keywords && paper.data.keywords.length > 0 && (
              <div>
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                  <span class="text-amber-600 dark:text-amber-400 mr-3">🔑</span>
                  Keywords
                </h2>
                <div class="flex flex-wrap gap-2">
                  {paper.data.keywords.map(keyword => (
                    <span class="inline-block px-3 py-1 bg-indigo-50 dark:bg-indigo-900/30 border border-indigo-200 dark:border-indigo-700 text-indigo-700 dark:text-indigo-300 rounded-full text-sm">
                      {keyword}
                    </span>
                  ))}
                </div>
              </div>
            )}

            <!-- Topics -->
            <div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <span class="text-amber-600 dark:text-amber-400 mr-3">🏷️</span>
                Research Topics
              </h2>
              <div class="flex flex-wrap gap-2">
                {paper.data.topics.map(topic => (
                  <a
                    href={getLocalizedPath(`topics/${encodeURIComponent(topic)}`, currentLocale)}
                    class="inline-block px-3 py-1 bg-purple-50 dark:bg-purple-900/30 border border-purple-200 dark:border-purple-700 text-purple-700 dark:text-purple-300 rounded-full text-sm hover:bg-purple-100 dark:hover:bg-purple-900/50 transition-colors"
                  >
                    #{getTopicTranslation(topic, 'en')}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between py-6 border-y border-gray-200 dark:border-gray-700 mb-8">
          <div class="flex items-center">
            <InteractionButtons
              contentId={`paper-${paper.slug}`}
              contentType="paper"
              client:visible
            />
          </div>

          <a
            href={paper.data.sourceUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center px-4 py-2 bg-amber-600 hover:bg-amber-700 text-white text-sm font-medium rounded-lg transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            Read Original
          </a>
        </div>

        <!-- Detailed Content -->
        <div class="prose prose-lg dark:prose-invert max-w-none mb-12 hyphens-auto text-justify"
             style="hyphens: auto; -webkit-hyphens: auto; -ms-hyphens: auto;"
             lang="en">
          <Content />
        </div>

        <!-- Discussion Section -->
        <div class="mt-12 pt-12 border-t border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Discussion</h2>
          <Discussion
            contentId={`paper-${paper.slug}`}
            contentType="paper"
            client:visible
          />
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-20 space-y-6">
          <!-- Paper Info -->
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Paper Info</h3>

            <div class="space-y-3 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-500 dark:text-gray-400">Author:</span>
                <span class="text-gray-900 dark:text-white font-medium">{paper.data.author}</span>
              </div>

              <div class="flex justify-between">
                <span class="text-gray-500 dark:text-gray-400">Published:</span>
                <span class="text-gray-900 dark:text-white">{formatDate(paper.data.publishDate)}</span>
              </div>

              {paper.data.journal && (
                <div class="flex justify-between">
                  <span class="text-gray-500 dark:text-gray-400">Journal:</span>
                  <span class="text-gray-900 dark:text-white">{paper.data.journal}</span>
                </div>
              )}

              {paper.data.doi && (
                <div class="flex justify-between">
                  <span class="text-gray-500 dark:text-gray-400">DOI:</span>
                  <span class="text-gray-900 dark:text-white font-mono text-xs break-all">{paper.data.doi}</span>
                </div>
              )}

              {paper.data.citationCount && (
                <div class="flex justify-between">
                  <span class="text-gray-500 dark:text-gray-400">Citations:</span>
                  <span class="text-gray-900 dark:text-white">{formatCitations(paper.data.citationCount)}</span>
                </div>
              )}

              <div class="flex justify-between">
                <span class="text-gray-500 dark:text-gray-400">Language:</span>
                <span class="text-gray-900 dark:text-white">
                  {paper.data.contentLanguage === 'zh-CN' ? 'Chinese' :
                   paper.data.contentLanguage === 'en' ? 'English' : paper.data.contentLanguage}
                </span>
              </div>
            </div>
          </div>

          <!-- Related Papers -->
          {relatedPapers.length > 0 && (
            <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Related Papers</h3>
              <div class="space-y-4">
                {relatedPapers.map(relatedPaper => (
                  <a
                    href={getLocalizedPath(`papers/${relatedPaper.slug.slice(0, -3)}`, currentLocale)}
                    class="group block hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg p-2 transition-colors"
                  >
                    <h4 class="font-medium text-gray-900 dark:text-white text-sm leading-tight mb-1 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors line-clamp-2">
                      {relatedPaper.data.title}
                    </h4>
                    <p class="text-xs text-gray-600 dark:text-gray-400 mb-1">
                      {relatedPaper.data.author}
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-500">
                      {relatedPaper.data.journal || 'Academic Paper'}
                    </p>
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Buy Me a Coffee -->
          <div class="bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 rounded-xl p-6 shadow-sm border border-yellow-200 dark:border-yellow-800/30">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-3 text-center">Support Us</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 text-center">
              If this content helps you
            </p>
            <a
              href="https://buymeacoffee.com/femres"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full px-4 py-3 bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-white font-semibold rounded-lg transition-all duration-200 text-center"
            >
              ☕ Buy me a coffee
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>