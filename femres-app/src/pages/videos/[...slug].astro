---
export const prerender = true;

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import InteractionButtons from '../../components/InteractionButtons';
import Discussion from '../../components/Discussion';

export async function getStaticPaths() {
  const videos = await getCollection('videos');
  return videos.map((video) => ({
    params: { slug: video.slug },
    props: video,
  }));
}

const video = Astro.props;
const { Content } = await video.render();

// 获取相关视频
const allVideos = await getCollection('videos');
const relatedVideos = allVideos
  .filter(v => 
    v.slug !== video.slug && 
    v.data.topics.some(topic => video.data.topics.includes(topic))
  )
  .slice(0, 3);

// 格式化日期
const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// 格式化时长
const formatDuration = (seconds: number) => {
  const hours = Math.floor(seconds / 3600);
  const mins = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;
  if (hours > 0) {
    return `${hours}小时${mins}分钟${secs > 0 ? secs + '秒' : ''}`;
  } else if (mins > 0) {
    return `${mins}分钟${secs > 0 ? secs + '秒' : ''}`;
  }
  return `${secs}秒`;
};
---

<Layout 
  title={`${video.data.title} - FemRes`}
  description={video.data.description}
>
  <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
        <a href="/" class="hover:text-purple-600 dark:hover:text-purple-400">首页</a>
        <span>/</span>
        <a href="/videos" class="hover:text-purple-600 dark:hover:text-purple-400">视频</a>
        <span>/</span>
        <span class="text-gray-900 dark:text-white">{video.data.title}</span>
      </div>
    </nav>

    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
        {video.data.title}
      </h1>

      <!-- Video Meta -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between bg-gray-50 dark:bg-gray-800 rounded-xl p-6 mb-8">
        <div class="flex flex-col md:flex-row md:items-center space-y-3 md:space-y-0 md:space-x-8">
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="font-medium">{video.data.author}</span>
          </div>
          
          <div class="flex items-center text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time datetime={video.data.publishDate.toISOString()}>
              {formatDate(video.data.publishDate)}
            </time>
          </div>
          
          {video.data.duration && (
            <div class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{formatDuration(video.data.duration)}</span>
            </div>
          )}
        </div>

        <div class="flex items-center mt-4 lg:mt-0 space-x-4">
        </div>
      </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-3">
        <!-- Video Player -->
        <div class="mb-8">
          <div class="aspect-video bg-gray-900 rounded-2xl overflow-hidden">
            {video.data.embedUrl ? (
              <iframe 
                src={video.data.embedUrl}
                title={video.data.title}
                class="w-full h-full"
                allowfullscreen
              ></iframe>
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="text-center text-white">
                  <div class="text-6xl mb-4">🎬</div>
                  <p class="text-lg mb-4">视频暂时无法播放</p>
                  <a 
                    href={video.data.sourceUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    观看原视频
                  </a>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Description -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/30 dark:to-purple-900/30 rounded-xl p-6 mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">视频简介</h2>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
            {video.data.description}
          </p>
        </div>

        <!-- Topics -->
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">相关主题</h2>
          <div class="flex flex-wrap gap-2">
            {video.data.topics.map(topic => (
              <a 
                href={`/topics/${encodeURIComponent(topic)}`}
                class="inline-block px-3 py-1 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:border-purple-500 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors"
              >
                {topic}
              </a>
            ))}
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between py-4 border-y border-gray-200 dark:border-gray-700 mb-8">
          <div class="flex items-center">
            <InteractionButtons
              contentId={`video-${video.slug}`}
              contentType="video"
              client:visible
            />
          </div>
          
          <a 
            href={video.data.sourceUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            原视频链接
          </a>
        </div>

        <!-- Detailed Content -->
        <div class="prose prose-lg max-w-none 
                     prose-headings:text-gray-900 dark:prose-headings:text-white
                     prose-p:text-gray-700 dark:prose-p:text-gray-300
                     prose-a:text-purple-600 hover:prose-a:text-purple-800
                     prose-strong:text-gray-900 dark:prose-strong:text-white
                     prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300
                     prose-blockquote:border-purple-500
                     prose-code:text-purple-600 dark:prose-code:text-purple-400
                     prose-pre:bg-gray-800 dark:prose-pre:bg-gray-900
                     prose-th:text-gray-900 dark:prose-th:text-white
                     prose-td:text-gray-700 dark:prose-td:text-gray-300">
          <Content />
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-20 space-y-6">
          <!-- Video Info Card -->
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">视频信息</h3>
            
            <div class="space-y-4 text-sm">
              <div class="flex">
                <span class="text-gray-600 dark:text-gray-400 w-16 flex-shrink-0">作者:</span>
                <span class="text-gray-900 dark:text-white font-medium flex-1 text-right">{video.data.author}</span>
              </div>
              
              <div class="flex">
                <span class="text-gray-600 dark:text-gray-400 w-16 flex-shrink-0">发布:</span>
                <span class="text-gray-900 dark:text-white flex-1 text-right">{formatDate(video.data.publishDate)}</span>
              </div>
              
              {video.data.duration && (
                <div class="flex">
                  <span class="text-gray-600 dark:text-gray-400 w-16 flex-shrink-0">时长:</span>
                  <span class="text-gray-900 dark:text-white flex-1 text-right">{formatDuration(video.data.duration)}</span>
                </div>
              )}
              
              <div class="flex">
                <span class="text-gray-600 dark:text-gray-400 w-16 flex-shrink-0">语言:</span>
                <span class="text-gray-900 dark:text-white flex-1 text-right">
                  {video.data.language === 'zh-CN' ? '中文' : 
                   video.data.language === 'en' ? '英语' : video.data.language}
                </span>
              </div>

            </div>

            <div class="border-t border-gray-200 dark:border-gray-600 pt-4 mt-6">
              <button class="w-full px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-200">
                添加到播放列表
              </button>
            </div>
          </div>

          <!-- Buy Me a Coffee -->
          <div class="bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 rounded-xl p-6 shadow-sm border border-yellow-200 dark:border-yellow-800/30">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-3 text-center">支持我们</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 text-center">
            如果这些内容对您有帮助
          </p>
          <a 
            href="https://buymeacoffee.com/femres" 
            target="_blank" 
            rel="noopener noreferrer"
            class="block w-full px-4 py-3 bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-white font-semibold rounded-lg transition-all duration-200 text-center"
          >
            ☕ Buy me a coffee
          </a>
          </div>

          <!-- Related Videos -->
          {relatedVideos.length > 0 && (
            <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-4">相关视频</h3>
              <div class="space-y-4">
                {relatedVideos.map(relatedVideo => (
                  <a 
                    href={`/videos/${relatedVideo.slug}`}
                    class="group flex gap-3 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg p-2 transition-colors"
                  >
                    <div class="flex-shrink-0 w-20 h-14 bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-900 to-purple-900 rounded-lg flex items-center justify-center">
                      {relatedVideo.data.thumbnail ? (
                        <img 
                          src={relatedVideo.data.thumbnail} 
                          alt={relatedVideo.data.title}
                          class="w-full h-full object-cover rounded-lg"
                        />
                      ) : (
                        <span class="text-lg">🎥</span>
                      )}
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="font-medium text-gray-900 dark:text-white text-sm leading-tight mb-1 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
                        {relatedVideo.data.title}
                      </h4>
                      <p class="text-xs text-gray-600 dark:text-gray-400 mb-1">
                        {relatedVideo.data.author}
                      </p>
                      {relatedVideo.data.duration && (
                        <p class="text-xs text-gray-500 dark:text-gray-500">
                          {formatDuration(relatedVideo.data.duration)}
                        </p>
                      )}
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>

    <!-- Discussion Section -->
    <Discussion 
      contentId={`video-${video.slug}`}
      contentType="video"
      client:load
    />
  </article>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>