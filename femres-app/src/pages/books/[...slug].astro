---
export const prerender = true;

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import InteractionButtons from '../../components/InteractionButtons';
import Discussion from '../../components/Discussion';
import BookCard from '../../components/BookCard.astro';
import { createT, getLocalizedPath, getLocaleFromUrl } from '../../i18n/index';
import { getTopicTranslation } from '../../i18n/topicsUtils';

const currentLocale = getLocaleFromUrl(Astro.url) || 'zh-CN';
const t = createT(currentLocale);

export async function getStaticPaths() {
  const books = await getCollection('books');
  // ‰∏≠ÊñáÁïåÈù¢Ôºö‰∏∫ÊâÄÊúâ‰∏çÂ∏¶-enÂêéÁºÄÁöÑ‰π¶Á±çÁîüÊàêÈ°µÈù¢
  const chineseInterfaceBooks = books.filter(book => !book.slug.endsWith('-en'));
  return chineseInterfaceBooks.map((book) => ({
    params: { slug: book.slug },
    props: book,
  }));
}

const book = Astro.props;
const { Content } = await book.render();

// Ëé∑ÂèñÁõ∏ÂÖ≥‰π¶Á±çÔºàÁõ∏Âêå‰∏ªÈ¢òÁöÑÂÖ∂‰ªñ‰π¶Á±çÔºâ
const allBooks = await getCollection('books');
const relatedBooks = allBooks
  .filter(b => 
    b.slug !== book.slug && 
    b.data.topics.some(topic => book.data.topics.includes(topic))
  )
  .slice(0, 3);

// Ê†ºÂºèÂåñÊó•Êúü
const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
