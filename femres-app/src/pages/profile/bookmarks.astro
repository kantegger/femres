---
import Layout from '../../layouts/Layout.astro';
import UserContentList from '../../components/UserContentList';
---

<Layout 
  title="我的收藏 - FemRes" 
  description="查看您收藏的女性主义内容"
>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
            <a href="/" class="hover:text-purple-600 dark:hover:text-purple-400">首页</a>
            <span>/</span>
            <a href="/profile" class="hover:text-purple-600 dark:hover:text-purple-400">个人中心</a>
            <span>/</span>
            <span class="text-gray-900 dark:text-white">我的收藏</span>
          </div>
        </nav>

        <div class="text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-yellow-100 to-orange-100 dark:from-yellow-900 dark:to-orange-900 rounded-full mb-4">
            <span class="text-4xl">⭐</span>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            我的收藏
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            您收藏的精选内容，随时回顾
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <UserContentList type="bookmarks" client:load />
    </div>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>