import InteractionButtons from './InteractionButtons';

export interface Props {
  title: string;
  author: string;
  description: string;
  featuredImage?: string;
  publishDate: Date;
  readingTime?: number;
  sourceUrl: string;
  slug: string;
  topics: string[];
  articleType?: 'news' | 'blog' | 'research' | 'opinion' | 'analysis';
}

const { 
  title, 
  author, 
  description, 
  featuredImage, 
  publishDate, 
  readingTime, 
  sourceUrl, 
  slug, 
  topics, 
  articleType = 'blog'
} = Astro.props;

