---
import InteractionButtons from './InteractionButtons';
import '../i18n/translations';
import { createT, getLocalizedPath, getLocaleFromUrl, formatDate } from '../i18n/index';
import { getTopicTranslation, findTopicByName } from '../i18n/topicsUtils';

export interface Props {
  title: string;
  titleEn?: string;
  author: string;
  description: string;
  descriptionEn?: string;
  coverImage?: string;
  publishDate: Date;
  slug: string;
  topics: string[];
  isbn?: string;
  locale?: string;
}

const { title, titleEn, author, description, descriptionEn, coverImage, publishDate, slug, topics, isbn, locale } = Astro.props;

// 获取当前语言，如果没有传入locale则从URL获取
const currentLocale = locale || getLocaleFromUrl(Astro.url);
const t = createT(currentLocale);

// 简化逻辑：优先显示英文
const displayTitle = titleEn || title;
const displayDescription = descriptionEn || description;

// 生成本地化链接
// 移除语言后缀以生成干净的URL路径
const cleanSlug = slug.endsWith('-en') ? slug.slice(0, -3) : slug;
const bookLink = getLocalizedPath(`books/${cleanSlug}`, currentLocale);

const formatYear = (date: Date) => {
  return date.getFullYear();
};
---

<article class="group relative bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden min-h-[320px] border-2 border-red-500">
    <div class="flex flex-col sm:flex-row h-full">
      <!-- Book Cover Section -->
      <div class="w-full sm:w-32 md:w-36 lg:w-40 flex-shrink-0 p-4 sm:pr-0">
        <div class="flex flex-col h-full">
          <!-- Book Cover -->
          <a href={bookLink} class="aspect-[2/3] bg-gradient-to-br from-purple-100 to-pink-100 dark:from-purple-900 dark:to-pink-900 relative overflow-hidden rounded-lg mb-3 block">
            {coverImage ? (
              <img
                src={coverImage}
                alt={displayTitle}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="text-center p-4">
                  <span class="text-4xl mb-2 block">📚</span>
                  <p class="text-xs text-gray-600 dark:text-gray-400 font-medium">{t('common.loading')}</p>
                </div>
              </div>
            )}
          </a>
        </div>
      </div>

      <!-- Book Info -->
      <div class="flex-1 p-4 sm:p-5 flex flex-col">
        <a href={bookLink} class="flex-1 flex flex-col">
          <!-- Title -->
          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors leading-tight line-clamp-3">
            {displayTitle}
          </h3>

          <!-- Author -->
          <div class="mb-4">
            <p class="text-sm text-gray-600 dark:text-gray-400 flex items-center">
              <span class="font-medium">{author}</span>
              <span class="text-gray-500 dark:text-gray-500 ml-2">({formatYear(publishDate)})</span>
            </p>
          </div>

          <!-- Description -->
          <div class="flex-1 mb-4">
            <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed line-clamp-5">
              {displayDescription}
            </p>
          </div>

          <!-- Read More Link -->
          <div class="text-right mt-auto">
            <span class="text-purple-600 dark:text-purple-400 text-sm font-medium group-hover:underline">
              {t('common.readMore')} →
            </span>
          </div>
        </a>

        <!-- Action Row -->
        <div class="flex justify-end pt-3 border-t border-gray-100 dark:border-gray-700">
          <InteractionButtons
            contentId={`book-${slug}`}
            contentType="book"
            client:visible
          />
        </div>
      </div>
    </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-5 {
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>